<div class="container mt-5">
<h1>Add a bookmark</h1>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.submit class: 'btn btn-primary mt-2' %>
  <% end %>
<%= link_to "Back to list", lists_path, class: 'btn btn-secondary mt-3' %>
</div>
