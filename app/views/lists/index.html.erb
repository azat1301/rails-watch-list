<div class="container">
  <div class="banner">
  </div>
  <div class="d-flex justify-content-between">
    <h1>Movie lists</h1>
    <%= link_to "Create a list", new_list_path, class: "btn btn-success mb-3"%>
  </div>
    <div class="cards">
      <% @lists.each do |list| %>
        <div class="card-category mb-3" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : "http://source.unsplash.com/featured/?#{list.name}&#{rand(1000)}" %>)'>
          <%= list.name %>
          <%= link_to "", list_path(list), class: "card-trip-link" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
