<div class="container my-3">
  <div class="flex-column justify-content-center mb-5">
    <h1 class="text-white">List of <%= @list.name %> movies</h1>
    <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: 'btn btn-success mt-3' %>
  </div>
  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="card-trip">
      <%= image_tag bookmark.movie.poster_url, alttext: 'movie_image' %>
      <div class="card-trip-infos">
          <h2><%= bookmark.movie.title %></h2>
      </div>
      <div class="container d-flex justify-content-between mb-3">
        <h2><%= bookmark.movie.rating %>
          <i class="fas fa-smile"></i>
        </h2>
        <%= link_to bookmark_path(bookmark), method: :delete, data: { confirm: "Remove \"#{bookmark.movie.title}\" from the list?" }  do %>
        <i class="fas fa-trash-alt fa-lg"></i>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="my-3"><%= link_to "Back to list", lists_path, class: 'btn btn-secondary' %></div>
</div>
